@model IEnumerable<project_asp.net.Models.Reservations>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_AdminLayout";
}

<h1>Reservations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.spot_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.spot_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.reservation_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.reservation_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.reservation_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
